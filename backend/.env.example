# ===========================================
# GhostWorker Backend Configuration
# Copy this file to .env and update the values
# ===========================================

# Application
APP_NAME=GhostWorker
APP_ENV=production
DEBUG=false
SECRET_KEY=your-super-secret-key-change-in-production

# API URL - Your domain where the API is hosted
# UPDATE THIS to your actual domain
API_URL=https://yourdomain.com

# Database
DATABASE_URL=postgresql://postgres:postgres@db:5432/ghostworker

# Redis
REDIS_URL=redis://redis:6379/0

# CORS - UPDATE with your frontend domain
# For Lovable hosted frontend, use your .lovable.app URL or custom domain
CORS_ORIGINS=["https://yourdomain.com","https://your-project.lovable.app","http://localhost:5173"]

# SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@ghostworker.app

# OAuth - UPDATE redirect URIs with your domain
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=https://yourdomain.com/api/auth/google/callback
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=

# Frontend - UPDATE with your Lovable project URL
FRONTEND_URL=https://your-project.lovable.app

# Paystack (Card & Bank payments)
PAYSTACK_SECRET_KEY=sk_test_xxxxx
PAYSTACK_PUBLIC_KEY=pk_test_xxxxx
PAYSTACK_WEBHOOK_SECRET=

# Coinbase Commerce (Crypto payments)
COINBASE_COMMERCE_API_KEY=
COINBASE_WEBHOOK_SECRET=

# Rate Limiting by Plan
RATE_LIMIT_FREE=60
RATE_LIMIT_PRO=200
RATE_LIMIT_BUSINESS=500
RATE_LIMIT_ENTERPRISE=1000

# ==========================================
# AI & GPT-4 (OpenAI)
# ==========================================
OPENAI_API_KEY=sk-xxxxx

# ==========================================
# Twilio (Voice/Video Calls)
# ==========================================
TWILIO_ACCOUNT_SID=ACxxxxx
TWILIO_AUTH_TOKEN=xxxxx
TWILIO_API_KEY=SKxxxxx
TWILIO_API_SECRET=xxxxx
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_TWIML_APP_SID=APxxxxx

# ==========================================
# CRM Integrations (OAuth)
# ==========================================

# Salesforce
SALESFORCE_CLIENT_ID=
SALESFORCE_CLIENT_SECRET=

# HubSpot
HUBSPOT_CLIENT_ID=
HUBSPOT_CLIENT_SECRET=

# Pipedrive
PIPEDRIVE_CLIENT_ID=
PIPEDRIVE_CLIENT_SECRET=

# Zoho CRM
ZOHO_CLIENT_ID=
ZOHO_CLIENT_SECRET=

# ==========================================
# Blockchain (Polygon)
# ==========================================
BLOCKCHAIN_NETWORK=polygon
POLYGON_RPC_URL=https://polygon-rpc.com
BLOCKCHAIN_PRIVATE_KEY=0x_your_private_key
AUDIT_CONTRACT_ADDRESS=0x_your_contract_address
POLYGONSCAN_API_KEY=
